<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/headerlinks')%>
    <link rel="stylesheet" href="/css/userregister.css" />
    <title>Stripes Sign Up</title>
  </head>
  <body>
    <header><%-include('../partials/navbar')%></header>
    <main id="signup">
      <div class="register-container">
        <div class="register-content">
          <div class="register-header">
            <h1><span id="logo">Welcome to STRIPES.CO</span></h1>
          </div>
          <div class="register-message">
            <p>
              Don't be afraid to show off your wild styles! Register for an
              account to get exclusive offers!
            </p>
          </div>
          <div class="register-ad">
            <p>Register today for 10% off your order</p>
          </div>
        </div>
        <div class="register-form-space">
          <div class="register-form">
            <form id="register-user-form" action="/user/register" method="POST">
              <h2>Sign up for free</h2>
              <%if(error[0] !== undefined) {%>
              <div class="error"><%=error%></div>
              <%}%> <%if(success[0] !== undefined) {%>
              <div class="success"><%=success%></div>
              <%}%>
              <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" />
                <div class="feedback hide"></div>
              </div>
              <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" />
                <div class="hide feedback"></div>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  autocomplete="on"
                />
                <div class="hide feedback"></div>
              </div>
              <button class="btn-light" id="registerbtn">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%-include('../partials/footer')%> <%-include('../partials/bodyscripts')%>
    <script src="/js/pubregister.js"></script>
  </body>
</html>
